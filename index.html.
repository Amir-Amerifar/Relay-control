<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ESP32 Relay Control</title>
    
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            text-align: center;
        }

        h1 {
            color: #4CAF50;
        }

        button {
            display: inline-block;
            background-color: #4CAF50; /* Green background */
            color: white; /* White text */
            border: none;
            padding: 15px 32px;
            font-size: 16px;
            margin: 10px;
            cursor: pointer;
            border-radius: 5px;
        }

        button.off {
            background-color: #f44336; /* Red background */
        }

        button:hover {
            opacity: 0.8;
        }
    </style>
    <script>
        function sendCommand(command) {
            fetch('https://http:/10.0.0.144:80/relay/test', {  // Replace with your actual back-end URL
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    customerID: localStorage.getItem('customerID'), // Auto-generated customer ID
                    command: command
                })
            }).then(response => {
                return response.text();
            }).then(data => {
                alert("Response from ESP32: " + data);
            }).catch(error => {
                console.error('Error:', error);
            });
        }

        function generateCustomerID() {
            return 'customer_' + Math.random().toString(36).substring(2, 15);
        }

        window.onload = function() {
            let customerID = localStorage.getItem('customerID');
            if (!customerID) {
                customerID = generateCustomerID();
                localStorage.setItem('customerID', customerID);
                console.log("New Customer ID Generated: " + customerID);
            } else {
                console.log("Existing Customer ID: " + customerID);
            }
        }
    </script>
</head>
<body>
    <h1>Control Your ESP32 Relay</h1>
    <button onclick="sendCommand('turn_on')">Turn On Relay</button>
    <button onclick="sendCommand('turn_off')">Turn Off Relay</button>
</body>
</html>



